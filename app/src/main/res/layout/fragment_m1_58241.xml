<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".m1_58241">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        android:scaleType="centerCrop"
        android:src="@drawable/kjui" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView"
            android:layout_margin="40dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mission Brief"

            android:textSize="35sp" />

        <TextView
            android:id="@+id/textView2"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A PL600 domestic android (Daniel) has malfunctioned and taken a child hostage (Emma) on the rooftop of a high-rise apartment.
Police have secured the perimeter, but the situation is unstable.\n\nYou are Connor, an advanced prototype sent to negotiate and resolve the crisis.
\n\nYour objective is to resolve the situation and prevent civilian casualty." />

        <Button
            android:id="@+id/button6"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Approach the Rooftop" />


    </LinearLayout>




</FrameLayout>